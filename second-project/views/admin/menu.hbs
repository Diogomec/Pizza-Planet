{{> admin }}

<div class="card-collection">
  {{#each data.pizzas}}
 <div class="card-container">
    <div class="card-elements">
      <h5>{{name}}</h5>
      <div class="card-img">
      <img src="/images/pepperoni.jpg" alt="Pizza">
      </div>
      <div class="card-elements">
        <p>{{igredients}}</p>
        <button><a href="/admin/menu/{{_id}}" class="a-menu">See more</a></button>
      </div>
    </div>
  </div>
   {{/each}}
</div>
