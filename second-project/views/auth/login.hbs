{{> public }}

<div class="container">
<form action="/auth/login" method="post" class="d-flex flex-column justify-content-center align-items-center">
<label for="email" class="my-3">Email: </label>
<input type="text" name="email" id="emai" placeholder="Tony" class="rounded">
<label for="Password" class="my-3">Password: </label>
<input type="password" name="password" id="password" placeholder="******" class="rounded">
<button type="submit" class="mt-4 py-1 px-4 rounded">Login</button>
<p class="mt-4">Don't have an account? <a href="/auth/signup">Register here</a></p>


 {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
</form>
</div>