{{> public }}

<div class="container">
<form action="/auth/signup" method="post" class="d-flex flex-column justify-content-center align-items-center">
<label for="username" class="my-3">Username: </label>
<input type="text" name="username" id="username" placeholder="Tony" class="rounded">
<label for="email" class="my-3">Email: </label>
<input type="email" name="email" id="email" placeholder="tony@pizzaplanet.com" class="rounded">
<label for="password" class="my-3">Password: </label>
<input type="password" name="password" id="password" placeholder="******" class="rounded">
<button type="submit" class="mt-4 py-1 px-4 rounded">Signup</button>
<p class="mt-4">Already have an account? <a href="/auth/login">Login now!</a></p>


 {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
</form>
</div>